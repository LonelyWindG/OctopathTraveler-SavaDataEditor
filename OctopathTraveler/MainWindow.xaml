                        </ListBox>
                    </StackPanel>-->
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemWeak}">
                    <ListView ItemsSource="{Binding EnemyWeaknesses}">
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn Width="65">
                                    <GridViewColumnHeader Click="MenuItemWeakProgress_Click">
                                        <TextBlock Text="ID" FontWeight="Bold"/>
                                        <GridViewColumnHeader.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Name="MenuItemWeakAll" Header="All" Click="MenuItemWeakAll_Click"/>
                                                <MenuItem Name="MenuItemWeakCompleted" Header="Completed"  Click="MenuItemWeakCompleted_Click"/>
                                                <MenuItem Name="MenuItemWeakUncompleted" Header="Uncompleted"  Click="MenuItemWeakUncompleted_Click"/>
                                            </ContextMenu>
                                        </GridViewColumnHeader.ContextMenu>
                                    </GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Info.Value}" IsChecked="{Binding IsBreakAll}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Info.Name}" Header="Name" Width="180"/>
                                <GridViewColumn Header="{x:Static properties:Resources.ItemSword}" Width="42">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Sword}" IsEnabled="{Binding Info.IsEnableSword}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="{x:Static properties:Resources.ItemLance}" Width="42">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Lance}" IsEnabled="{Binding Info.IsEnableLance}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="{x:Static properties:Resources.ItemDagger}" Width="42">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Dagger}" IsEnabled="{Binding Info.IsEnableDagger}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="{x:Static properties:Resources.ItemAxe}" Width="42">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Axe}" IsEnabled="{Binding Info.IsEnableAxe}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="{x:Static properties:Resources.ItemBow}" Width="42">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Bow}" IsEnabled="{Binding Info.IsEnableBow}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="{x:Static properties:Resources.ItemRod}" Width="42">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
