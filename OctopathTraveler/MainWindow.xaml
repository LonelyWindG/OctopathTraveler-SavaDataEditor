                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemParty}">
                    <Grid>
                        <Grid.Resources>
                            <local:PartyMemberConverter x:Key="PartyMemberConverter"/>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ListBox ItemsSource="{Binding MainParty}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding Path=DataContext.Info.CharaNames, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:MainWindow}}"
                                              DisplayMemberPath="Name" SelectedIndex="{Binding ID, Converter={StaticResource PartyMemberConverter}}"
                                              Width="200"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemQuests}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <DockPanel>
                            <Label DockPanel.Dock="Top" Content="ALL"/>
                            <ListBox ItemsSource="{Binding MissionIDs}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding ID}" Width="200"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DockPanel>
                        <DockPanel Grid.Column="1">
                            <Label DockPanel.Dock="Top" Content="{x:Static properties:Resources.QuestsCountry}"/>
                            <ListBox Name="CountryList" ItemsSource="{Binding Countris}" DisplayMemberPath="Country"/>
                        </DockPanel>
                        <ListBox Grid.Column="2" ItemsSource="{Binding ElementName=CountryList, Path=SelectedItem.Missions}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="State"/>
                                        <TextBox Text="{Binding State}" Width="50"/>
                                        <Label Content="Clear"/>
                                        <CheckBox IsChecked="{Binding Clear}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemTreasure}">
                    <ListView ItemsSource="{Binding TreasureStates}">
                        <ListView.Resources>
                            <local:Num2VisibilityConverter x:Key="Num2VisibilityConverter"/>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn DisplayMemberBinding="{Binding Info.Value}" Header="ID" Width="65"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Info.Name}" Header="Name" Width="220"/>
                                <GridViewColumn Width="85">
                                    <GridViewColumnHeader Click="MenuItemTreasureStateProgress_Click">
                                        <TextBlock Text="{x:Static properties:Resources.TreasureStatesSummation}" FontWeight="Bold"/>
                                        <GridViewColumnHeader.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Name="MenuItemTreasureStateAll" Header="All" Click="MenuItemTreasureStateAll_Click"/>
                                                <MenuItem Name="MenuItemTreasureStateCompleted" Header="Completed"  Click="MenuItemTreasureStateCompleted_Click"/>
                                                <MenuItem Name="MenuItemTreasureStateUncompleted" Header="Uncompleted"  Click="MenuItemTreasureStateUncompleted_Click"/>
                                            </ContextMenu>
                                        </GridViewColumnHeader.ContextMenu>
                                    </GridViewColumnHeader>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding SummationProgress}" 
                                                      IsChecked="{Binding IsCollectAll}" IsEnabled="False"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="{x:Static properties:Resources.TreasureStatesChest}" Width="85">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding ChestProgress}" IsChecked="{Binding IsCollectChest}" IsEnabled="False"
                                                      Visibility="{Binding Info.Chest, Converter={StaticResource Num2VisibilityConverter}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="{x:Static properties:Resources.TreasureStatesHiddenItem}" Width="85">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding HiddenItemProgress}" IsChecked="{Binding IsCollectHiddenItem}" IsEnabled="False"
                                                      Visibility="{Binding Info.HiddenItem, Converter={StaticResource Num2VisibilityConverter}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Value}" Header="VALUE" Width="165"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!--<ListBox ItemsSource="{Binding TreasureStates}" 
                             VirtualizingStackPanel.VirtualizationMode="Recycling"  VirtualizingStackPanel.IsVirtualizing="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal">
                                    <Label Content="{Binding Info.Value}" Width="80"/>
                                    <Label Content="{Binding Info.Name}" Width="220"/>
                                    <CheckBox Content="{x:Static properties:Resources.TreasureStatesSummation}" VerticalAlignment="Center" 
                                              IsChecked="{Binding IsCollectAll}" IsEnabled="False"/>
                                    <Label Content="{Binding SummationProgress}" Width="50"/>
                                    <CheckBox Content="{x:Static properties:Resources.TreasureStatesChest}" VerticalAlignment="Center" 
                                              IsChecked="{Binding IsCollectChest}" IsEnabled="False"/>
                                    <Label Content="{Binding ChestProgress}" Width="50"/>
                                    <CheckBox Content="{x:Static properties:Resources.TreasureStatesHiddenItem}" VerticalAlignment="Center" 
                                              IsChecked="{Binding IsCollectHiddenItem}" IsEnabled="False"/>
                                    <Label Content="{Binding HiddenItemProgress}" Width="50"/>
                                    <Label Content="VALUE"/>
                                    <Label Content="{Binding Value}"/>
                                </VirtualizingStackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>-->
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
