                            <Button Grid.Row="7" Grid.Column="2" Content="..." Click="ButtonHead_Click"/>
                            <Label Grid.Row="8" Content="{x:Static properties:Resources.ItemBody}"/>
                            <Label Grid.Row="8" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Body, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="8" Grid.Column="2" Content="..." Click="ButtonBody_Click"/>
                            <Label Grid.Row="9" Content="{x:Static properties:Resources.ItemAccessory1}"/>
                            <Label Grid.Row="9" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Accessory1, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="9" Grid.Column="2" Content="..." Click="ButtonAccessory1_Click"/>
                            <Label Grid.Row="10" Content="{x:Static properties:Resources.ItemAccessory2}"/>
                            <Label Grid.Row="10" Grid.Column="1" Content="{Binding ElementName=CharactorList, Path=SelectedItem.Accessory2, Converter={StaticResource CharactorEquipmentConverter}}"/>
                            <Button Grid.Row="10" Grid.Column="2" Content="..." Click="ButtonAccessory2_Click"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemItems}">
                    <TabItem.Resources>
                        <local:ItemNameConverter x:Key="ItemNameConverter"/>
                    </TabItem.Resources>
                    <ListBox ItemsSource="{Binding Items}" VirtualizingStackPanel.VirtualizationMode="Recycling"  VirtualizingStackPanel.IsVirtualizing="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal">
                                    <Label Content="Count: "/>
                                    <TextBox Width="50" Text="{Binding Count, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Content=" ... " Click="ButtonItem_Click"/>
                                    <Label Content="{Binding ID, Converter={StaticResource ItemNameConverter}}"/>
                                </VirtualizingStackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemPlaces}">
                    <Grid>
                        <Grid.Resources>
                            <local:PartyMemberConverter x:Key="PartyMemberConverter"/>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0">
                            <TextBlock TextWrapping="Wrap" Text="{x:Static properties:Resources.TabItemPlacesWarning}" />
                        </Label>
                        <ListBox ItemsSource="{Binding Places}" Grid.Row="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding Visit}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static properties:Resources.TabItemTameMonster}">
                    <TabItem.Resources>
                        <local:TameMonsterConverter x:Key="TameMonsterConverter"/>
                    </TabItem.Resources>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0">
                            <TextBlock TextWrapping="Wrap" Text="{x:Static properties:Resources.TabItemTameMonsterWarning}" />
                        </Label>
                        <ListBox ItemsSource="{Binding TameMonsters}" Grid.Row="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Name "/>
                                        <ComboBox ItemsSource="{Binding Path=DataContext.Info.TameMonsters, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:MainWindow}}"
                                              DisplayMemberPath="Name" SelectedIndex="{Binding ID, Converter={StaticResource TameMonsterConverter}}"
                                              Width="200"/>
                                        <Label Content="Count "/>
                                        <TextBox Text="{Binding Count,UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                                        <CheckBox IsChecked="{Binding Used}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
